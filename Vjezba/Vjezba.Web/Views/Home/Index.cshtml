@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@ViewData["Title"] - Football Manager</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: url('https://example.com/football-background.jpg') no-repeat center center fixed;
            background-size: cover;
            color: #fff;
        }

        .welcome-message {
            background: rgba(0, 0, 0, 0.7);
            padding: 20px;
            border-radius: 10px;
        }

        .btn-custom {
            background-color: #28a745;
            color: #fff;
        }

            .btn-custom:hover {
                background-color: #218838;
                color: #fff;
            }
    </style>
</head>
<body>
    <div class="container text-center  d-flex justify-content-center align-items-center">
        <div class="welcome-message">
            <h1 class="display-4">Welcome to Football Manager</h1>
            <p class="lead">Create Leagues, manage your team, tactics, and lead them to victory!</p>
            <a href="/leagues" class="btn btn-custom btn-lg">Get Started</a>
        </div>
    </div>
</body>
</html>
